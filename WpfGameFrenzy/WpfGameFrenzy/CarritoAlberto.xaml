<Page x:Class="WpfGameFrenzy.CarritoAlberto"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:WpfGameFrenzy"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="CarritoAlberto">

    <Grid>
        <ScrollViewer>
            <StackPanel Background="#FF252525">
                <Canvas Height="90">
                    <Label Content="Mi Carrito" Canvas.Left="20" Canvas.Top="50" Height="40" Width="200" HorizontalAlignment="Left" VerticalAlignment="Center" FontSize="20" FontFamily="Arial Black" Foreground="White"/>
                </Canvas>
                <Canvas Height="350" >
                    <Canvas Height="110" Width="500" Canvas.Left="60" Background="#2E3A3A">
                        <Image Source="/cyberpunk-box.jpg" Height="90" Width="70" Canvas.Left="10" Canvas.Top="10" Stretch="Fill"/>
                    </Canvas>
                    <Canvas Height="110" Width="500" Canvas.Left="60" Canvas.Top="120" Background="#2E3A3A"></Canvas>
                    <Canvas Height="110" Width="500" Canvas.Left="60" Canvas.Top="240" Background="#2E3A3A"></Canvas>
                    <Canvas Height="200" Width="200" Canvas.Left="580" Canvas.Top="100" Background="#2E3A3A">
                        <Label Content="Resumen de juegos y aplicaciones" Canvas.Left="10" Canvas.Top="10" Height="29" Width="180" HorizontalAlignment="Center" VerticalAlignment="Top" FontSize="15" FontFamily="Arial Black" Foreground="White"/>
                    </Canvas>
                </Canvas>
            </StackPanel>
        </ScrollViewer>
    </Grid>
</Page>
