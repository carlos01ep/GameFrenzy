<Page x:Class="WpfGameFrenzy.BibliotecaHector"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="BibliotecaHector">

    <ScrollViewer Width="485" Height="350">
        <StackPanel Background="#FF252525">
            <Canvas Height="100">
                <Label Content="Biblioteca" Canvas.Left="10" Canvas.Top="10" Height="26" Width="109" HorizontalAlignment="Left" VerticalAlignment="Top" FontSize="16" FontFamily="Arial Black" Foreground="White"/>
                <Canvas  Height="50" Width="453" Canvas.Top="40" Canvas.Left="5" HorizontalAlignment="Left" VerticalAlignment="Center" Background="#FF656464">
                    <Image Source="/carpeta.png" Height="30" Width="30" Canvas.Left="10" Canvas.Top="10"></Image>
                    <Label Content="Organizate con los favoritos y las colecciones" Canvas.Left="40" Canvas.Top="5" FontSize="7" FontFamily="Arial Black" Foreground="White"></Label>
                    <TextBlock TextWrapping="Wrap" FontSize="5" Text="¿Hay tantos juegos en tu biblioteca que te cuesta encontrar lo que buscas? ¡Crea" Canvas.Left="40" Canvas.Top="20" FontFamily="Arial" Foreground="White" IsEnabled="False"/>
                </Canvas>
            </Canvas>
            <WrapPanel>
                <Image></Image>
            </WrapPanel>
        </StackPanel>
    </ScrollViewer>
</Page>
